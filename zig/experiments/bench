#!/bin/sh
Commit=false
Log=true
Host=`hostname|sed 's/\..*//'`
cd ~/git/Zag-Smalltalk/zig/experiments
case "$1" in
    -log) Log=true;;
    -git)
        # Fetch the latest remote-tracking branches
        git fetch

        # Count commits where local HEAD is behind origin/main
        COMMITS_BEHIND=`git rev-list --count HEAD..origin/main`
        case "$COMMITS_BEHIND" in
            0) exit 0;;
        esac
        git pull
        Commit=true
        Log=true;;
    *) Log=false;;
esac
Version=`git log "--pretty=format:%cI-%h" -1`
for encoding in nan zag #onlyInt onlyFloat taggedInt zagAlt spur ptr
do
    zig build -Dencoding=$encoding -Doptimize=ReleaseFast &&
    for benchFile in bench.*
    do
        bench=`expr "$benchFile" : 'bench\.\(.*\)'`
        if $Log; then
            mkdir -p Benchmarks/$bench/$Host/$encoding
            ./$benchFile >Benchmarks/$bench/$Host/$encoding/$Version 2>&1
        else
            ./$benchFile
        fi
    done
done
if $Commit; then
    git add Benchmarks
    git commit -m "Experiment results for $Version for $Host"
    git push
fi
